<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->

<mapper namespace="com.goupang.www.dao.member.MemberDAO">

	<select id="selectByEmail" resultType="com.goupang.www.dto.member.Member"> 
	SELECT
	MEMBER_EMAIL
	FROM MEMBER
	WHERE MEMBER_EMAIL = #{memberEmail}
	</select>
	<select id="selectMemberByEmail" resultType="com.goupang.www.dto.member.Member"> 
	SELECT
	*
	FROM MEMBER
	WHERE MEMBER_EMAIL = #{memberEmail}
	</select>
	<select id="selectMemberByMemberNo" resultType="com.goupang.www.dto.member.Member"> 
	SELECT
	*
	FROM MEMBER
	WHERE MEMBER_NO = #{memberNo}
	</select>

	<insert id="insertMember">
	INSERT INTO MEMBER(
	MEMBER_NO,
	MEMBER_EMAIL,
	MEMBER_PW,
	MEMBER_NAME,
	MEMBER_PHONE,
	MEMBER_GRANT,
	MEMBER_ADDR
	)values(
	MEMBER_SEQ.NEXTVAL,
	#{memberEmail},
	#{memberPw},
	#{memberName},
	#{memberPhone},
	1,
	'서울 금천구 가산디지털1로 186 제이플라츠 5층 한국아이티인재개발원'
	)
	</insert>
	
	<select id="selectManagerByManagerId" resultType="com.goupang.www.dto.manager.Manager">
	select*from manager where manager_id= #{managerId}
	</select>
	
	<insert id="insertManager">
		INSERT INTO manager 
		VALUES(
		MANAGER_SEQ.NEXTVAL,
		#{managerId},
		#{managerPw}
		)
	</insert>
	
	<select id="selectSellerBySellerId" resultType="com.goupang.www.dto.seller.Seller">
	select*from seller where seller_id = #{sellerId}
	</select>
	
	<insert id="insertSeller">
		INSERT INTO SELLER 
		VALUES(
		    SELLER_SEQ.NEXTVAL,
		   #{sellerLicenseNumber},
		   #{sellerCompanyName},
		   #{sellerName},
		   #{sellerId},
		   #{sellerPw},
		   #{sellerPhone},
		   #{sellerAddr},
		   0
	   )
	</insert>

</mapper>
